{
  "compilerOptions": {
    "lib": ["ES6", "es2017"],
    "target": "ES2017",
    "rootDir": "./src",
    "module": "CommonJS",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "types": ["tslog", "@faker-js/faker"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
